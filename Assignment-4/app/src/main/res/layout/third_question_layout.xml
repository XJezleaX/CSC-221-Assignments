<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/questionThree"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="In DC's Blue Beetle, what is the name of our superhero? "
        android:textSize = "32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24" />

    <Button
        android:id="@+id/threebtnOne"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Carlos"
        android:textSize = "20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionThree"
        app:layout_constraintVertical_bias="0.245" />

    <Button
        android:id="@+id/threebtnTwo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Jaime"
        android:textSize = "20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionThree"
        app:layout_constraintVertical_bias="0.367" />

    <Button
        android:id="@+id/threebtnThree"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Peter"
        android:textSize = "20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionThree"
        app:layout_constraintVertical_bias="0.494" />

    <Button
        android:id="@+id/threebtnFour"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Arthur"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionThree"
        app:layout_constraintVertical_bias="0.61" />


</androidx.constraintlayout.widget.ConstraintLayout>